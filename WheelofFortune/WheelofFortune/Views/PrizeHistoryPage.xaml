<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WheelofFortune.Views.PrizeHistoryPage"
             xmlns:viewmodels="clr-namespace:WheelofFortune.ViewModels"
             xmlns:model="clr-namespace:WheelofFortune.Models;assembly=WheelofFortune">
   
    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Prize}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="1"
                               Text="{Binding Points}"/>
                        <Label Grid.Column="2" 
                               Text="{Binding Date}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </ContentPage.Content>
</ContentPage>